<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uas.controller.DashboardController">

    <top>
        <VBox prefHeight="400.0" prefWidth="600.0" spacing="8.0">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            <HBox spacing="10.0">
                <Label text="Cari Wisata:" />
                <TextField fx:id="searchField" promptText="Nama tempat wisata" />
                <Label text="Kategori:" />
                <ComboBox fx:id="categoryComboBox" promptText="Pilih kategori" />
                <Label text="Lokasi:" />
                <TextField fx:id="locationField" promptText="Lokasi" />
                <Button onAction="#onSearch" text="Cari" />
                <Button onAction="#onReset" text="Reset" />
            </HBox>
            <Separator />
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="wisataListContainer" spacing="8">
                <padding>
                    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                </padding>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
